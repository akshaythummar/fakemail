---
import { LayoutDashboard, Shield, Zap, Eye, Github } from 'lucide-react';
import Generator from '@/components/Generator';
import { ModeToggle } from '@/components/ModeToggle';
---

<header class="relative bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900 dark:from-slate-950 dark:via-slate-900 dark:to-slate-950">
    <!-- Animated background elements -->
    <div class="absolute inset-0 bg-[url('data:image/svg+xml,%3csvg xmlns=\'http://www.w3.org/2000/svg\' viewBox=\'0 0 32 32\' width=\'32\' height=\'32\' fill=\'none\' stroke=\'rgb(148 163 184 / 0.03)\'%3e%3cpath d=\'M0 .5H31.5V32\'/%3e%3c/svg%3e')] animate-pulse"></div>

    <!-- Navigation bar -->
    <nav class="relative z-10 flex justify-between items-center p-4 pb-2">
        <div class="flex items-center gap-2">
            <div class="w-8 h-8 bg-gradient-to-r from-green-500 to-emerald-500 rounded-lg flex items-center justify-center">
                <img class='w-5 h-5' src='/favicon.svg' alt='FakeMail' />
            </div>
            <span class="text-white font-bold text-lg">FakeMail</span>
        </div>

        <div class="flex items-center gap-2">
            <a
                href="/dashboard"
                title="Dashboard"
                class="hidden sm:flex gap-2 h-9 items-center text-white/80 hover:text-white bg-white/5 hover:bg-white/10 rounded-full px-4 py-2 text-sm transition-all duration-200"
            >
                <LayoutDashboard size={16} />
                Dashboard
            </a>
            <ModeToggle client:load />
            <a
                href='https://github.com/akshaythummar/fakemail'
                target='_blank'
                class='inline-flex h-9 w-9 rounded-full items-center justify-center hover:bg-white/10 transition-all duration-200'
                title="View on GitHub"
            >
                <Github size={18} className="text-white/80 hover:text-white" />
            </a>
        </div>
    </nav>

    <!-- Hero section -->
    <div class="relative z-10 container mx-auto max-w-4xl px-4 pb-8">
        <!-- Logo and title -->
        <div class="text-center pt-8 pb-6">
            <div class="inline-flex items-center justify-center w-20 h-20 bg-gradient-to-r from-green-500 to-emerald-500 rounded-2xl mb-6 shadow-2xl">
                <img class='w-12 h-12' src='/favicon.svg' alt='FakeMail' />
            </div>
            <h1 class='font-extrabold text-4xl md:text-6xl pb-4 bg-gradient-to-r from-green-400 via-emerald-400 to-green-400 bg-clip-text text-transparent'>
                FakeMail
            </h1>
            <p class='text-xl md:text-2xl text-white/90 font-medium mb-6'>
                Temporary Email That Disappears
            </p>
        </div>

        <!-- Feature highlights -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-8">
            <div class="bg-white/5 backdrop-blur-sm border border-white/10 rounded-xl p-4 text-center">
                <div class="w-12 h-12 bg-gradient-to-r from-blue-500 to-cyan-500 rounded-xl flex items-center justify-center mx-auto mb-3">
                    <Zap size={24} className="text-white" />
                </div>
                <h3 class="text-white font-semibold mb-2">Instant Generation</h3>
                <p class="text-white/70 text-sm">Get a temporary email in seconds</p>
            </div>
            <div class="bg-white/5 backdrop-blur-sm border border-white/10 rounded-xl p-4 text-center">
                <div class="w-12 h-12 bg-gradient-to-r from-purple-500 to-pink-500 rounded-xl flex items-center justify-center mx-auto mb-3">
                    <Shield size={24} className="text-white" />
                </div>
                <h3 class="text-white font-semibold mb-2">Privacy First</h3>
                <p class="text-white/70 text-sm">Complete anonymity guaranteed</p>
            </div>
            <div class="bg-white/5 backdrop-blur-sm border border-white/10 rounded-xl p-4 text-center">
                <div class="w-12 h-12 bg-gradient-to-r from-orange-500 to-red-500 rounded-xl flex items-center justify-center mx-auto mb-3">
                    <Eye size={24} className="text-white" />
                </div>
                <h3 class="text-white font-semibold mb-2">Auto-Delete</h3>
                <p class="text-white/70 text-sm">Emails vanish after 2 hours</p>
            </div>
        </div>

        <!-- Description -->
        <div class="text-center mb-8">
            <p class='text-white/80 text-lg mb-6 max-w-2xl mx-auto'>
                🚀 Forget about spam, advertising mailings, and privacy concerns. Keep your real mailbox clean and secure with our advanced temporary email service.
            </p>
        </div>

        <!-- Email generator section -->
        <div class="bg-white/5 backdrop-blur-sm border border-white/10 rounded-2xl p-6 mb-4">
            <h2 class='text-white font-semibold text-xl text-center mb-6'>Generate Your Temporary Email</h2>
            <Generator client:load />
        </div>

        <!-- Trust indicators -->
        <div class="text-center">
            <p class="text-white/60 text-sm">
                ✅ No registration required • 🔒 End-to-end encrypted • 🌍 99.9% uptime
            </p>
        </div>
    </div>
</header>
